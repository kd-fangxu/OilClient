<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oilweidget="http://schemas.android.com/apk/res/com.example.oilclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ee3b3b"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pageback"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_norbutton"
            android:padding="8dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <com.oil.weidget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <com.oil.weidget.CircleImageView
                    android:id="@+id/civ_userheader"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:src="@drawable/icon_userhead"
                    oilweidget:border_color="#f2f2f2"
                    oilweidget:border_width="2dp" >
                </com.oil.weidget.CircleImageView>

                <TextView
                    android:id="@+id/tv_userinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="item"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_uc_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_uc_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/shape_uc_infoitem_up"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实姓名：" />

                    <TextView
                        android:id="@+id/tv_uc_realName"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机：" />

                    <TextView
                        android:id="@+id/tv_uc_tel"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_us_schoolnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_down"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业名称：" />

                    <TextView
                        android:id="@+id/tv_uc_comName"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_uc_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_uc_changepwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/sha_uc_item_white"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密码修改" />

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_emailverified"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱绑定" />

                    <TextView
                        android:id="@+id/tv_uc_mailcontent"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_changeuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/sha_uc_item_white"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户切换" />

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.oil.weidget.BounceScrollView>

</LinearLayout>