<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Themecolor" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_norbutton"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_back" >
        </ImageButton>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shanchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:text="删除"
            android:textColor="#f7f7f7"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dip"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:text="商品信息"
                    android:textColor="#E3393C"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/offerOrDemand"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dip"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="center"
                            android:paddingBottom="15dip"
                            android:paddingTop="15dip"
                            android:text="类型"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tigong"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="1"
                                android:background="@drawable/btn_shape"
                                android:gravity="center"
                                android:paddingBottom="8dip"
                                android:paddingTop="8dip"
                                android:text="供应"
                                android:textColor="#E3393C"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/xuqiu"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_shape"
                                android:gravity="center"
                                android:paddingBottom="8dip"
                                android:paddingTop="8dip"
                                android:text="求购"
                                android:textColor="#9f000000"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name0"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="center"
                            android:paddingBottom="15dip"
                            android:paddingTop="15dip"
                            android:text="产品"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/chanpinmingcheng"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@+id/name0"
                            android:background="@drawable/btn_shape"
                            android:editable="false"
                            android:hint="请输入产品名称"
                            android:padding="8dip"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/areaLin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="80dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dip"
                        android:gravity="center"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:text="地区"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_weight="1"
                        android:background="@drawable/btn_shape"
                        android:padding="8dip"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/provinceLin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:text="省份"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/btn_shape"
                        android:orientation="horizontal"
                        android:padding="8dip" >

                        <GridView
                            android:id="@+id/provincesGridView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:numColumns="2" >
                        </GridView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/markedTag"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:text="已选"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/marked"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/btn_shape"
                        android:padding="8dip"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name3"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="center"
                            android:paddingBottom="15dip"
                            android:paddingTop="15dip"
                            android:text="规格"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/chanpinguige"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@+id/name3"
                            android:background="@drawable/btn_shape"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/price"
                            android:padding="8dip"
                            android:textSize="17sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name4"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="center"
                            android:paddingBottom="15dip"
                            android:paddingTop="15dip"
                            android:text="价格"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="1"
                                android:background="@drawable/btn_shape"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:nextFocusForward="@+id/shuliang"
                                android:padding="8dip"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="元"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/name5"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="6dip"
                            android:gravity="center"
                            android:paddingBottom="15dip"
                            android:paddingTop="15dip"
                            android:text="数量"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/name5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <EditText
                                android:id="@+id/shuliang"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:layout_weight="1"
                                android:background="@drawable/btn_shape"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:nextFocusForward="@+id/remark"
                                android:padding="8dip"
                                android:textSize="17sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="吨"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:paddingBottom="15dip"
                        android:paddingTop="15dip"
                        android:text="备注"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/btn_shape"
                        android:minLines="3"
                        android:padding="8dip"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_margin="30dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_btnclick_gray"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>