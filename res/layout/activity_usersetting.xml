<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:oilweidget="http://schemas.android.com/apk/res/com.example.oilclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ee3b3b"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pageback"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_norbutton"
            android:padding="8dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <com.oil.weidget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_uc_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_uc_editname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_up"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号：" />

                    <TextView
                        android:id="@+id/tv_uc_name"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短讯设置" />

                    <TextView
                        android:id="@+id/tv_uc_sex"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_clearcatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/shape_uc_infoitem_up"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="清理缓存" />

                    <TextView
                        android:id="@+id/tv_uc_tel"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_down"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免打扰设置" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_uc_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_uc_changepwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_up"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="界面设置" />

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_editip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_up"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:是234  2：是生产机" />

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_checkupdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/shape_uc_infoitem_down"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="软件更新" />

                    <TextView
                        android:id="@+id/tv_uc_mailcontent"
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_uc_changeuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/shape_uc_infoitem_down"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" >

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多" />

                    <TextView
                        style="@style/text_stytle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_back_dark" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.oil.weidget.BounceScrollView>

</LinearLayout>